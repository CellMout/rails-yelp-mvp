<div class="container">
  <h1>Restaurant#show</h1>
  <p>Find me in app/views/restaurant/show.html.erb</p>

  <h2><%= @restaurant.name %></h2>
  <h2><%= @restaurant.address %></h2>
  <h2><%= @restaurant.category %></h2>

  <h1>Reviews</h1>
  <% @restaurant.reviews.each do |review| %>
  <li><%= review.content %> -- <%= review.rating %>/5</li>
  <% end %>

  <p>Leave a review</p>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit %>
  <% end %>
</div>
